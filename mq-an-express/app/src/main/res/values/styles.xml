<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <!--这个才是布局里面的颜色-->
        <!--默认的toolbar的颜色也是这个-->
        <item name="colorPrimary">@color/white</item>
        <!--中间这个是标题栏的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/black</item>


    </style>


    <style name="Mydialog" parent="android:style/Theme.Dialog">
        <!-- 注意这里也有个天坑啊，背景不是background而是windowBackgroud -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <!--<item name="android:paddingLeft">30dp</item>-->
        <!--<item name="android:paddingRight">30dp</item>-->
        <!--<item name="android:paddingLeft">@dimen/x12</item>-->
        <item name="android:layout_width">@dimen/x26</item>
        <item name="android:layout_height">@dimen/x19</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/myToolbarStyle</item>
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
    </style>

    <style name="myToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:paddingLeft">10dp</item>
    </style>


    <!--这个是登录时候的dialog（为了等待，因为登录可能耗时）-->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


