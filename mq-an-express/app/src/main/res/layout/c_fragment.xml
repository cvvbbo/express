<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/returnIm_rl"
            android:layout_width="@dimen/y40"
            android:layout_height="@dimen/y30">


            <ImageView
                android:layout_centerInParent="true"
               android:layout_centerVertical="true"
                android:id="@+id/returnIm"
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x19"
                android:src="@drawable/return_im" />


        </RelativeLayout>




        <TextView
            android:id="@+id/searchview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="拍照留言"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <View
        android:id="@+id/v7"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_below="@+id/v7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x18">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_marginLeft="@dimen/y16"
            android:gravity="center"
            android:text="运单号码" />

        <TextView
            android:id="@+id/express_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_marginLeft="@dimen/x112"
            android:gravity="center"
            android:text="11111111111111" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginRight="@dimen/y16"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="收件人/代收人" />

        <TextView
            android:id="@+id/receiver_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="@dimen/x112"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="11111111111111" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/tv2"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginRight="@dimen/y16"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="手机" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="@dimen/x112"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="11111111111111" />

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/tv3"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginRight="@dimen/y16"
            android:background="@color/line_color" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line3"
            android:layout_marginLeft="@dimen/y16"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="签收时间" />

        <TextView
            android:id="@+id/sign_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x18"
            android:layout_below="@+id/line3"
            android:layout_marginLeft="@dimen/x112"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center"
            android:text="11111111111111" />




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y19"
        android:background="@color/big_line">


        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x135"
            android:layout_marginTop="@dimen/y4"
            android:text="拍照存证"
            android:textSize="14sp" />

        <View
            android:id="@+id/v1"
            android:layout_width="@dimen/x36"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/x95"
            android:layout_marginTop="@dimen/y9"
            android:background="@color/line_color1" />


        <View
            android:id="@+id/v2"
            android:layout_width="@dimen/x36"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginTop="@dimen/y9"
            android:layout_toRightOf="@+id/tv5"
            android:background="@color/line_color1" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/rl2"
        android:id="@+id/make_photo_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x14"
        android:layout_marginTop="@dimen/x14">




        <com.emiaoqian.express.views.MyImageview
            android:id="@+id/position1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />





        <com.emiaoqian.express.views.MyImageview
            android:layout_marginLeft="@dimen/x145"
            android:id="@+id/position2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_below="@+id/make_photo_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y19"
        android:background="@color/big_line">


        <TextView
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x135"
            android:layout_marginTop="@dimen/y4"
            android:text="语音留言"
            android:textSize="14sp" />

        <View
            android:id="@+id/v3"
            android:layout_width="@dimen/x36"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/x95"
            android:layout_marginTop="@dimen/y9"
            android:background="@color/line_color1" />


        <View
            android:id="@+id/v4"
            android:layout_width="@dimen/x36"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginTop="@dimen/y9"
            android:layout_toRightOf="@+id/tv6"
            android:background="@color/line_color1" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_marginBottom="@dimen/x10"
        android:id="@+id/rl4"
        android:layout_below="@+id/rl3"
        android:layout_marginTop="@dimen/x15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/voice_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/recordBtn"
                android:src="@drawable/voice_im"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x65" />

            <TextView
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x4"
                android:layout_toRightOf="@+id/recordBtn"
                android:text="语音最长录制60s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_note"
                android:layout_marginTop="@dimen/x70"
                android:layout_centerHorizontal="true"
                android:text="按住对收件人留言"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/my_voice"
            android:layout_marginTop="@dimen/x5"
            android:layout_below="@+id/voice_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:id="@+id/record_contentLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                >
                <FrameLayout
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x20"
                    >
                    <ImageView
                        android:id="@+id/record_detailView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="28dp"
                        android:src="@drawable/gxx" />
                    <TextView
                        android:text="60s"
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="50dp"
                        />
                </FrameLayout>


            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/again_tv"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/record_contentLayout"
                android:text="重新录制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>




    </RelativeLayout>

    <TextView
        android:layout_marginBottom="@dimen/x5"
        android:layout_below="@+id/rl4"
        android:id="@+id/next_tv"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_buttom"
        android:gravity="center"
        android:text="下一步"
        android:layout_marginRight="@dimen/x22"
        android:layout_marginLeft="@dimen/x22"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25" />


</RelativeLayout>

</android.support.v4.widget.NestedScrollView>