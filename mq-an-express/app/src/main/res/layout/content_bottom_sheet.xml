<?xml version="1.0" encoding="utf-8"?>


<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:id="@+id/bottomSheetLayout"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="@string/bottom_sheet_behavior">




    <RelativeLayout
        android:id="@+id/root_wait_rl"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30">

        <ImageView
            android:id="@+id/icon_wait_me"
            android:layout_marginBottom="@dimen/x7"
            android:layout_marginTop="@dimen/x7"
            android:layout_marginLeft="@dimen/x17"
            android:src="@drawable/wait_me"
            android:layout_width="@dimen/x29"
            android:layout_height="@dimen/x29" />


        <TextView
            android:textColor="@color/text_color"
            android:gravity="center"
            android:id="@+id/wait_tv"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/icon_wait_me"
            android:text="待取件"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <TextView
            android:textColor="@color/my_red"
            android:gravity="center"
            android:id="@+id/wait_num_tv"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/wait_tv"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <TextView
            android:textColor="@color/text_color"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/wait_num_tv"
            android:text="件"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <ImageView
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginRight="@dimen/x17"
            android:layout_alignParentRight="true"
            android:src="@drawable/into"
            android:layout_width="@dimen/x19"
            android:layout_height="@dimen/x19" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/x4"
        android:layout_below="@+id/root_wait_rl"
        android:id="@+id/root_sign_rl"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30">

        <ImageView
            android:id="@+id/icon_sign"
            android:layout_marginBottom="@dimen/x7"
            android:layout_marginTop="@dimen/x7"
            android:layout_marginLeft="@dimen/x17"
            android:src="@drawable/signed"
            android:layout_width="@dimen/x29"
            android:layout_height="@dimen/x29" />


        <TextView
            android:textColor="@color/text_color"
            android:gravity="center"
            android:id="@+id/sign_tv"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/icon_sign"
            android:text="拍照留言已签收"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <TextView
            android:textColor="@color/my_red"
            android:gravity="center"
            android:id="@+id/sign_num_tv"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/sign_tv"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <TextView
            android:textColor="@color/text_color"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/x11"
            android:layout_toRightOf="@+id/sign_num_tv"
            android:text="件"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />

        <ImageView
            android:paddingBottom="@dimen/x3"
            android:paddingTop="@dimen/x3"
            android:layout_marginTop="@dimen/x11"
            android:layout_marginRight="@dimen/x17"
            android:layout_alignParentRight="true"
            android:src="@drawable/into"
            android:layout_width="@dimen/x19"
            android:layout_height="@dimen/x19" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/start_makephoto_rl"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/x4"
        android:layout_below="@+id/root_sign_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115">

        <TextView
            android:gravity="right"
            android:layout_marginTop="@dimen/x18"
            android:id="@+id/tv1"
            android:layout_marginLeft="@dimen/x55"
            android:textColor="@color/text_color1"
            android:text="扫描条码"
            android:textSize="12sp"
            android:layout_width="@dimen/x67"
            android:layout_height="@dimen/x19" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x18"
            android:id="@+id/tv2"
            android:textColor="@color/text_color1"
            android:text="拍照留言"
            android:textSize="12sp"
            android:layout_width="@dimen/x62"
            android:layout_height="@dimen/x19" />


        <TextView
            android:layout_marginTop="@dimen/x18"
           android:layout_toRightOf="@+id/tv2"
            android:textColor="@color/text_color1"
            android:text="签收存证"
            android:textSize="12sp"
            android:layout_width="@dimen/x62"
            android:layout_height="@dimen/x19" />


        <ImageView
            android:id="@+id/scan_qr"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv2"
            android:src="@drawable/scan_big"
            android:layout_width="@dimen/x78"
            android:layout_height="@dimen/x78" />


        <TextView
            android:gravity="center"
            android:textColor="@color/text_color"
            android:layout_marginBottom="@dimen/x15"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="创建·快递签收通知单"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x19" />


        <TextView
            android:textColor="@color/text_color1"
            android:gravity="center|bottom"
            android:id="@+id/input_express_num"
            android:layout_margin="@dimen/x10"
            android:layout_alignParentBottom="true"
            android:text="手动输入"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/idcard_im1"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/x4"
        android:layout_below="@+id/start_makephoto_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115" />
    <ImageView
        android:id="@+id/idcard_im2"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/x4"
        android:layout_below="@+id/idcard_im1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115" />
    <ImageView
        android:id="@+id/idcard_im3"
        android:layout_marginRight="@dimen/x9"
        android:layout_marginLeft="@dimen/x9"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/x4"
        android:layout_below="@+id/idcard_im2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115" />

</RelativeLayout>

</android.support.v4.widget.NestedScrollView>